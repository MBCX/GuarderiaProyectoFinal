            ninos.Clear();
            ninosFiltrados.Clear();
            ultimaActualizacion = DateTime.Now;
            StateHasChanged();

            await GuardarDatosEnStorage();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error limpiando localStorage: {ex.Message}");
        }
    }

