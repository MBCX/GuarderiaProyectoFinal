<a href="/" class="btn btn-outline-primary m-2 p-2 rounded-circle text-center">
    <i class="fas fa-arrow-left me-2"></i>
</a>

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
