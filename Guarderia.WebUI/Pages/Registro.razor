                        <i class="fas fa-download"></i> Exportar
                    </button>
                    <button class="btn btn-outline-warning" @onclick="ImportarDatos">
                        <i class="fas fa-upload"></i> Importar
                    </button>
                    <button class="btn btn-primary" @onclick="ShowRegistroForm">
