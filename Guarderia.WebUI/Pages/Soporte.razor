@code
{
    private FormularioContacto formularioContacto = new();
    private bool enviando = false;
    private bool mensajeEnviado = false;
    private bool mostrarError = false;
    private string mensajeError = string.Empty;

    private async Task EnviarMensaje()
    {
        enviando = true;
        mostrarError = false;

        try
        {
            // TODO: Contectar API
            await Task.Delay(2000);

            bool condicionesAceptadas = formularioContacto.AceptaTerminos;
            bool nombreValido = (
                formularioContacto.Nombre.Length > 0 &&
                formularioContacto.Nombre.Length < 100
            );
            bool emailValido = formularioContacto.Email.Length > 0;
            bool telefonoValido = (
                formularioContacto.Telefono.Length > 0 &&
                formularioContacto.Telefono.Length < 15
            );
            bool tipoConsultaValido = formularioContacto.TipoConsulta.Length > 0;
            bool mensajeValido = (
                formularioContacto.Mensaje.Length > 0 &&
                formularioContacto.Mensaje.Length < 1000
            );
            bool exito = (
                // Llenar todos los campos obligatorios
                condicionesAceptadas &&
                nombreValido &&
                emailValido &&
                telefonoValido &&
                tipoConsultaValido &&
                mensajeValido
            );

            if (exito)
            {
                mensajeEnviado = true;
                formularioContacto = new FormularioContacto(); // Limpiar formulario
            }
            else
            {
                mostrarError = true;

                // Niveles de mensaje de error
                if (!condicionesAceptadas)
                {
                    mensajeError = "Acepta los terminos para poder enviar el mensaje.";
                }
                else if (!nombreValido)
                {
                    mensajeError = "El nombre esta vacio o no es valido.";
                }
                else if (!emailValido)
                {
                    mensajeError = "El correo/email esta vacio o no es valido.";
                }
                else if (!telefonoValido)
                {
                    mensajeError = "El telefono esta vacio o no es valido.";
                }
                else if (!tipoConsultaValido)
                {
                    mensajeError = "El tipo de consulta esta vacio o no es valido.";
                }
                else if (!mensajeValido)
                {
                    mensajeError = "El mensaje esta vacio o no es valido.";
                }
            }
        }
        catch (Exception ex)
        {
            mostrarError = true;
            mensajeError = $"Error inesperado: {ex.Message}";
        }
        finally
        {
            enviando = false;
        }
    }

    private void LimpiarFormulario()
    {
        formularioContacto = new FormularioContacto();
        mensajeEnviado = false;
        mostrarError = false;
    }

    public class FormularioContacto
    {
        public string Nombre { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        //public Telefono Telefono { get; set; }
        public string Telefono { get; set; } = string.Empty;
        public string TipoConsulta { get; set; } = string.Empty;
        public string Mensaje { get; set; } = string.Empty;
        public bool AceptaTerminos { get; set; } = false;
    }
}