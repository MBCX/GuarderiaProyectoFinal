@code
{
    // Constante para la clave de localStorage
    private const string STORAGE_KEY = "guarderia_ninos_data";

    private List<Nino> ninos = new List<Nino>();
    private List<Nino> ninosFiltrados = new List<Nino>();
    private DateTime? ultimaActualizacion;

    private bool cargando = true;
    private bool hayError = false;
    private string mensajeError = "";

    // Filtros
    private string filtroEstado = "todos";
    private string filtroBusqueda = "";
    private string filtroAlergias = "todos";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    #region Métodos de LocalStorage

    private async Task CargarDatos()
    {
        try
        {
            cargando = true;
            hayError = false;
            StateHasChanged();

            await CargarDatosDesdeStorage();
            FiltrarDatos();
        }
        catch (Exception ex)
        {
            hayError = true;
            mensajeError = $"Error al cargar los datos: {ex.Message}";
            Console.WriteLine($"Error en CargarDatos: {ex.Message}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task CargarDatosDesdeStorage()
    {
        try
        {
            var json = await JSRuntime.InvokeAsync<string>("localStorage.getItem", STORAGE_KEY);

            if (!string.IsNullOrEmpty(json))
            {
                var datos = System.Text.Json.JsonSerializer.Deserialize<System.Text.Json.JsonElement>(json);

                if (datos.TryGetProperty("Ninos", out var ninosJson))
                {
                    ninos = System.Text.Json.JsonSerializer.Deserialize<List<Nino>>(ninosJson.GetRawText()) ?? new List<Nino>();
                }

                if (datos.TryGetProperty("UltimaActualizacion", out var fechaJson))
                {
                    if (DateTime.TryParse(fechaJson.GetString(), out var fecha))
                    {
                        ultimaActualizacion = fecha;
                    }
                }

                Console.WriteLine($"Datos cargados desde localStorage: {ninos.Count} niños");
            }
            else
            {
                // Si no hay datos guardados, mostrar mensaje
                ninos = new List<Nino>();
                Console.WriteLine("No se encontraron datos en localStorage");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando desde localStorage: {ex.Message}");
            // Si hay error, inicializar con lista vacía
            ninos = new List<Nino>();
            mensajeError = "No se pudieron cargar los datos desde el almacenamiento local. Es posible que no haya datos guardados.";
        }
    }

    #endregion

    #region Métodos de Filtrado

    private void FiltrarDatos()
    {
        ninosFiltrados = ninos.AsEnumerable().ToList();

        // Filtro por estado
        if (filtroEstado == "activos")
            ninosFiltrados = ninosFiltrados.Where(n => n.Activo).ToList();
        else if (filtroEstado == "inactivos")
            ninosFiltrados = ninosFiltrados.Where(n => !n.Activo).ToList();

        // Filtro por búsqueda
        if (!string.IsNullOrWhiteSpace(filtroBusqueda))
        {
            ninosFiltrados = ninosFiltrados.Where(n =>
                n.Nombre.Contains(filtroBusqueda, StringComparison.OrdinalIgnoreCase) ||
                n.NumeroMatricula.Contains(filtroBusqueda, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }

        // Filtro por alergias
        if (filtroAlergias == "con-alergias")
            ninosFiltrados = ninosFiltrados.Where(n => n.Alergias?.Any() == true).ToList();
        else if (filtroAlergias == "sin-alergias")
            ninosFiltrados = ninosFiltrados.Where(n => n.Alergias?.Any() != true).ToList();

        StateHasChanged();
    }

    private void LimpiarFiltros()
    {
        filtroEstado = "todos";
        filtroBusqueda = "";
        filtroAlergias = "todos";
        FiltrarDatos();
    }

    #endregion

    #region Métodos de Exportación

    private async Task ExportarPDF()
    {
        try
        {
            // Ocultar elementos que no queremos en el PDF
            await JSRuntime.InvokeVoidAsync("eval", @"
                document.querySelectorAll('.d-print-none').forEach(el => el.style.display = 'none');
                document.querySelectorAll('.d-none.d-print-block').forEach(el => el.style.display = 'block');
            ");

            // Imprimir
            await JSRuntime.InvokeVoidAsync("print");

            // Restaurar elementos después de la impresión
            await Task.Delay(1000); // Dar tiempo para que se complete la impresión
            await JSRuntime.InvokeVoidAsync("eval", @"
                document.querySelectorAll('.d-print-none').forEach(el => el.style.display = '');
                document.querySelectorAll('.d-none.d-print-block').forEach(el => el.style.display = 'none');
            ");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al exportar PDF: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Error al generar el PDF. Intente nuevamente.");
        }
    }

    private async Task ExportarExcel()
    {
        try
        {
            // Crear datos en formato CSV para exportar como Excel
            var csv = GenerarCSV();
            var fecha = DateTime.Now.ToString("yyyy-MM-dd_HH-mm");
            var filename = $"reporte_ninos_{fecha}.csv";

            await JSRuntime.InvokeVoidAsync("downloadFile", filename, csv);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al exportar Excel: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Error al generar el archivo Excel. Intente nuevamente.");
        }
    }

    private string GenerarCSV()
    {
        var sb = new System.Text.StringBuilder();

        // Encabezados
        sb.AppendLine("Matrícula,Nombre,Fecha Nacimiento,Edad,Fecha Ingreso,Estado,Fecha Baja,Responsable Pago,Cédula Responsable,Teléfono,Alergias,Personas Autorizadas");

        // Datos
        foreach (var nino in ninosFiltrados)
        {
            var edad = CalcularEdad(nino.FechaNacimiento);
            var fechaBaja = nino.FechaBaja?.ToString("dd/MM/yyyy") ?? "";
            var responsable = nino.ResponsablePago?.Nombre ?? "";
            var cedulaResponsable = nino.ResponsablePago?.Cedula ?? "";
            var telefono = nino.ResponsablePago?.Telefono ?? "";
            var alergias = nino.Alergias?.Any() == true
                ? string.Join("; ", nino.Alergias.Select(a => a.Ingrediente?.Nombre ?? ""))
                : "Sin alergias";
            var personasAutorizadas = ObtenerPersonasAutorizadasActivas(nino).Any()
                ? string.Join("; ", ObtenerPersonasAutorizadasActivas(nino).Select(p => $"{p.Nombre} ({p.Relacion})"))
                : "Sin personas autorizadas";

            sb.AppendLine($"\"{nino.NumeroMatricula}\",\"{nino.Nombre}\",\"{nino.FechaNacimiento:dd/MM/yyyy}\",{edad},\"{nino.FechaIngreso:dd/MM/yyyy}\",\"{(nino.Activo ? "Activo" : "Inactivo")}\",\"{fechaBaja}\",\"{responsable}\",\"{cedulaResponsable}\",\"{telefono}\",\"{alergias}\",\"{personasAutorizadas}\"");
        }

        return sb.ToString();
    }

    #endregion

    #region Métodos Auxiliares

    private int CalcularEdad(DateTime fechaNacimiento)
    {
        var edad = DateTime.Today.Year - fechaNacimiento.Year;
        if (fechaNacimiento.Date > DateTime.Today.AddYears(-edad)) edad--;
        return edad;
    }

    private int CalcularDiasEnGuarderia(Nino nino)
    {
        var fechaFin = nino.FechaBaja ?? DateTime.Today;
        return (fechaFin - nino.FechaIngreso).Days;
    }

    private List<PersonaAutorizada> ObtenerPersonasAutorizadasActivas(Nino nino)
    {
        return nino.PersonasAutorizadas?
            .Where(pa => pa.Activa)
            .Select(pa => pa.PersonaAutorizada)
            .Where(p => p != null)
            .ToList() ?? new List<PersonaAutorizada>();
    }

    private string ObtenerNombresAlergias(Nino nino)
    {
        if (nino.Alergias?.Any() != true)
            return "Sin alergias";

        return string.Join(", ", nino.Alergias.Select(a => a.Ingrediente?.Nombre ?? "").Where(n => !string.IsNullOrEmpty(n)));
    }

    private string ObtenerEstadoTexto(Nino nino)
    {
        if (nino.Activo)
            return "Activo";

        if (nino.FechaBaja.HasValue)
            return $"Baja: {nino.FechaBaja.Value:dd/MM/yyyy}";

        return "Inactivo";
    }

    #endregion
